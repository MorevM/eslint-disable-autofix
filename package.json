{
	"name": "@morev/eslint-disable-autofix",
	"description": "Utility to disable autofix for specific ESLint rules",
	"type": "module",
	"private": false,
	"version": "1.1.0",
	"engines": {
		"node": ">=18"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"author": {
		"name": "Maxim Morev",
		"email": "max.seainside@gmail.com"
	},
	"homepage": "https://github.com/MorevM/eslint-disable-autofix#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/MorevM/eslint-disable-autofix"
	},
	"keywords": [
		"eslint",
		"autofix",
		"no-autofix",
		"disable-autofix"
	],
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"prepare": "lefthook install",
		"test": "vitest",
		"test:dev": "vitest --watch",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"build": "rm -rf dist && tsup",
		"release": "release-it --disable-metrics"
	},
	"peerDependencies": {
		"eslint": "^9.0.0 || ^10.0.0"
	},
	"dependencies": {
		"@morev/utils": "^3.13.1"
	},
	"devDependencies": {
		"@morev/commitlint-config": "^0.2.2",
		"@morev/eslint-config": "^41.0.0",
		"@release-it/conventional-changelog": "^8.0.1",
		"@types/node": "^22.15.18",
		"eslint": "9.39.2",
		"eslint-plugin-unicorn": "^63.0.0",
		"lefthook": "^2.1.1",
		"release-it": "^19.2.4",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
